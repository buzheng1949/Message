<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content" >
    <ImageView
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/image_checkbox"
        android:background="@drawable/checkbox_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_toRightOf="@id/image_checkbox"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:id="@+id/iv_face_list_item"
        />
    <TextView
        android:id="@+id/tv_address_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_face_list_item"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_body_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_face_list_item"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_face_list_item"
        android:singleLine="true"
        />
    
    <TextView
        android:id="@+id/tv_date_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
         />
    
</RelativeLayout>